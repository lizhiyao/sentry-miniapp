/* Âè≥‰∏äËßíÁî®Êà∑‰ø°ÊÅØ */
.user-info-corner {
  position: fixed;
  top: 15rpx;
  right: 15rpx;
  z-index: 100;
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.25) 0%, rgba(255, 255, 255, 0.15) 100%);
  backdrop-filter: blur(25rpx) saturate(1.2);
  border-radius: 60rpx;
  padding: 12rpx 24rpx 12rpx 12rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.15),
    0 2rpx 8rpx rgba(0, 0, 0, 0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.3);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  animation: slideInRight 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
}

.user-info-corner::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.6s ease;
}

.user-info-corner:hover::before {
  left: 100%;
}

.user-info-corner:hover {
  transform: translateY(-6rpx) scale(1.02);
  box-shadow: 
    0 16rpx 64rpx rgba(0, 0, 0, 0.25),
    0 4rpx 16rpx rgba(0, 0, 0, 0.15),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.4);
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.3) 0%, rgba(255, 255, 255, 0.2) 100%);
  border-color: rgba(255, 255, 255, 0.5);
}

.corner-avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.9);
  margin-right: 16rpx;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  box-shadow: 
    0 4rpx 16rpx rgba(0, 0, 0, 0.2),
    inset 0 1rpx 2rpx rgba(255, 255, 255, 0.3);
}

.corner-avatar::after {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.3) 50%, transparent 70%);
  transform: rotate(-45deg);
  transition: all 0.6s ease;
  opacity: 0;
}

.corner-avatar:hover {
  transform: scale(1.08) rotate(2deg);
  border-color: rgba(255, 255, 255, 1);
  box-shadow: 
    0 6rpx 24rpx rgba(0, 0, 0, 0.3),
    inset 0 1rpx 3rpx rgba(255, 255, 255, 0.4);
}

.corner-avatar:hover::after {
  opacity: 1;
  transform: rotate(-45deg) translate(100rpx, 100rpx);
}

.corner-nickname {
  font-size: 24rpx;
  color: white;
  font-weight: 600;
  max-width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
  position: relative;
}

.corner-nickname::before {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 0;
  width: 0;
  height: 2rpx;
  background: linear-gradient(90deg, rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.4));
  transition: width 0.3s ease;
}

.user-info-corner:hover .corner-nickname {
  transform: translateX(2rpx);
  color: rgba(255, 255, 255, 0.95);
}

.user-info-corner:hover .corner-nickname::before {
  width: 100%;
}

@keyframes slideInRight {
  0% {
    opacity: 0;
    transform: translateX(120rpx) scale(0.8);
  }
  60% {
    opacity: 0.8;
    transform: translateX(-10rpx) scale(1.05);
  }
  100% {
    opacity: 1;
    transform: translateX(0) scale(1);
  }
}

