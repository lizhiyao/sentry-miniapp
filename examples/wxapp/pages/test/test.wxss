/* test.wxss */
.container {
  padding-bottom: 60rpx;
}

.header-section {
  padding: 24rpx 16rpx 48rpx;
}

.page-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 12rpx;
}

.page-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 用户卡片 */
.user-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar-placeholder {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 40rpx;
  font-weight: 600;
  margin-right: 24rpx;
}

.user-meta {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.user-status {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

.btn-sm {
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-weight: 500;
}

.btn-primary {
  background: var(--primary-color);
  color: white;
}

.btn-outline-danger {
  background: transparent;
  color: var(--danger-color);
  border: 1px solid var(--danger-color);
}

/* 列表样式 */
.action-list {
  padding: 0;
  overflow: hidden;
}

.action-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1px solid #F1F5F9;
  transition: background 0.2s;
}

.action-item:last-child {
  border-bottom: none;
}

.action-item:active {
  background: #F8FAFC;
}

.icon-box {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  background: #F1F5F9;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.icon-box.error { background: #FEF2F2; color: #EF4444; }
.icon-box.warning { background: #FFFBEB; color: #F59E0B; }
.icon-box.info { background: #EFF6FF; color: #3B82F6; }
.icon-box.success { background: #ECFDF5; color: #10B981; }
.icon-box.primary { background: #F5F3FF; color: #8B5CF6; }

.action-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-right: 24rpx;
}

.action-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 6rpx;
}

.action-desc {
  font-size: 24rpx;
  color: var(--text-tertiary);
  line-height: 1.4;
}

.action-btn {
  font-size: 24rpx;
  color: var(--primary-color);
  font-weight: 600;
  background: var(--primary-light);
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
}
