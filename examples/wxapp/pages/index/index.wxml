<!--index.wxml-->
<view class="container">
  <!-- 头部欢迎区域 -->
  <view class="header-section">
    <view class="brand">
      <view class="logo-box">S</view>
      <text class="brand-name">Sentry Miniapp</text>
    </view>
    <text class="welcome-text">实时监控您的小程序异常与性能</text>
  </view>

  <!-- SDK 状态卡片 -->
  <view class="card status-card">
    <view class="card-header">
      <text class="card-title">SDK 状态</text>
      <view class="status-badge {{sdkStatus.connected ? 'active' : ''}}">
        <view class="dot"></view>
        <text>{{sdkStatus.connected ? '运行中' : '未连接'}}</text>
      </view>
    </view>
    
    <view class="info-list">
      <view class="info-item">
        <text class="label">版本号</text>
        <text class="value">{{sdkStatus.version}}</text>
      </view>
      <view class="info-item">
        <text class="label">DSN 配置</text>
        <text class="value highlight">{{sdkStatus.dsnConfigured ? '已配置' : '未配置'}}</text>
      </view>
      <view class="info-item">
        <text class="label">初始化时间</text>
        <text class="value">{{sdkStatus.initTime}}</text>
      </view>
    </view>
  </view>

  <!-- 环境信息卡片 -->
  <view class="card env-card">
    <view class="card-header">
      <text class="card-title">运行环境</text>
    </view>
    <view class="grid-info">
      <view class="grid-item">
        <text class="grid-value">{{systemInfo.SDKVersion}}</text>
        <text class="grid-label">基础库</text>
      </view>
      <view class="grid-item">
        <text class="grid-value">{{systemInfo.platform}}</text>
        <text class="grid-label">平台</text>
      </view>
      <view class="grid-item">
        <text class="grid-value">{{systemInfo.brand}}</text>
        <text class="grid-label">设备</text>
      </view>
    </view>
  </view>

  <!-- 快捷入口 -->
  <view class="action-area">
    <button class="btn-primary" bindtap="goToTest">
      开始测试监控功能 →
    </button>
  </view>
</view>
