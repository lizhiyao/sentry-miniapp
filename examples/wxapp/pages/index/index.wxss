/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  padding: 40rpx 32rpx;
}

/* 头部品牌区域 */
.header-section {
  margin-bottom: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.brand {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.logo-box {
  width: 80rpx;
  height: 80rpx;
  background: var(--primary-color);
  color: white;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: 800;
  margin-right: 24rpx;
  box-shadow: var(--shadow-md);
}

.brand-name {
  font-size: 48rpx;
  font-weight: 700;
  color: var(--text-primary);
}

.welcome-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 卡片通用 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1px solid rgba(0,0,0,0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

/* SDK 状态卡片 */
.status-badge {
  display: flex;
  align-items: center;
  background: #F1F5F9;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

.status-badge.active {
  background: #ECFDF5;
  color: var(--success-color);
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #CBD5E1;
  margin-right: 12rpx;
}

.status-badge.active .dot {
  background: var(--success-color);
  box-shadow: 0 0 0 4rpx rgba(16, 185, 129, 0.2);
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}

.info-item .label {
  color: var(--text-secondary);
}

.info-item .value {
  color: var(--text-primary);
  font-weight: 500;
  font-family: monospace;
}

.info-item .value.highlight {
  color: var(--primary-color);
  background: var(--primary-light);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

/* 环境信息 Grid */
.grid-info {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  background: #F8FAFC;
  padding: 24rpx 16rpx;
  border-radius: 16rpx;
}

.grid-value {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.grid-label {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

/* 按钮区域 */
.action-area {
  margin-top: 48rpx;
}

.btn-primary {
  width: 100%;
}
