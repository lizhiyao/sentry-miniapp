/**index.wxss**/
.container {
  position: relative;
  min-height: 100vh;
  background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 50%, #000000 100%);
  padding: 0;
  padding-bottom: 120rpx; /* 为底部导航栏预留空间 */
  overflow: hidden;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 20% 80%, rgba(255, 255, 255, 0.05) 0%, transparent 50%),
              radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.08) 0%, transparent 50%),
              radial-gradient(circle at 40% 40%, rgba(255, 255, 255, 0.03) 0%, transparent 50%);
  z-index: 0;
}

/* 顶部装饰背景 */
 .bg-decoration {
   position: absolute;
   top: 0;
   left: 0;
   right: 0;
   height: 260rpx;
   background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
   border-radius: 0 0 80rpx 80rpx;
   backdrop-filter: blur(10rpx);
   z-index: 0;
   border: 1rpx solid rgba(255,255,255,0.2);
 }
 
 /* 头部区域 */
.header {
  position: relative;
  z-index: 1;
  text-align: center;
  padding: 70rpx 40rpx 30rpx;
  color: white;
}

.title {
   display: block;
   font-size: 38rpx;
   font-weight: bold;
   color: white;
   margin-bottom: 16rpx;
 }

.subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 30rpx;
  line-height: 1.4;
}





/* 统计数据区域 */
.stats-section {
   margin: 0 40rpx 40rpx;
   background: rgba(255, 255, 255, 0.95);
   backdrop-filter: blur(20rpx);
   border-radius: 32rpx;
   padding: 48rpx;
   box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3), 
               0 8rpx 24rpx rgba(0, 0, 0, 0.15),
               inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
   border: 1rpx solid rgba(255, 255, 255, 0.2);
   position: relative;
   overflow: hidden;
 }

 .stats-section::before {
   content: '';
   position: absolute;
   top: 0;
   left: 0;
   right: 0;
   height: 4rpx;
   background: linear-gradient(90deg, #000000, #333333, #666666, #000000);
   background-size: 200% 100%;
   animation: shimmer 3s ease-in-out infinite;
 }

 @keyframes shimmer {
   0%, 100% { background-position: 200% 0; }
   50% { background-position: -200% 0; }
 }
 
 .stats-header {
   text-align: center;
   margin-bottom: 40rpx;
 }
 
 .stats-title {
   display: block;
   font-size: 36rpx;
   font-weight: 600;
   color: #1a1a1a;
   margin-bottom: 12rpx;
 }
 
 .stats-desc {
   display: block;
   font-size: 28rpx;
   color: #666;
 }
 
 .stats-grid {
   display: grid;
   grid-template-columns: 1fr 1fr 1fr;
   gap: 20rpx;
   margin-bottom: 32rpx;
 }
 
 .stat-item {
   display: flex;
   flex-direction: column;
   align-items: center;
   text-align: center;
   padding: 24rpx 20rpx;
   background: linear-gradient(135deg, rgba(0, 0, 0, 0.05) 0%, rgba(0, 0, 0, 0.08) 50%, rgba(0, 0, 0, 0.03) 100%);
   border-radius: 20rpx;
   border: 2rpx solid rgba(0, 0, 0, 0.1);
   position: relative;
   overflow: hidden;
   transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
   cursor: pointer;
 }

 .stat-item::before {
   content: '';
   position: absolute;
   top: 0;
   left: -100%;
   width: 100%;
   height: 100%;
   background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
   transition: left 0.5s ease;
 }

 .stat-item:hover {
   transform: translateY(-4rpx) scale(1.02);
   box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.2);
   border-color: rgba(0, 0, 0, 0.2);
 }

 .stat-item:hover::before {
   left: 100%;
 }
 
 .stat-icon {
   font-size: 40rpx;
   margin-bottom: 12rpx;
 }
 
 .stat-content {
   width: 100%;
 }
 
 .stat-number {
   display: block;
   font-size: 28rpx;
   font-weight: 700;
   color: #1a1a1a;
   margin-bottom: 4rpx;
   word-break: break-all;
 }
 
 .stat-label {
   display: block;
   font-size: 22rpx;
   color: #666;
   line-height: 1.2;
 }
 
 .stats-footer {
   text-align: center;
   padding-top: 24rpx;
   border-top: 2rpx solid #f0f0f0;
 }
 
 .stats-update {
   font-size: 24rpx;
   color: #999;
 }
 
 /* 功能测试区域 */
 .test-section {
    margin: 0 40rpx 40rpx;
    background: white;
    border-radius: 24rpx;
    padding: 40rpx;
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  }
 


/* 底部信息 */
.footer {
  text-align: center;
  padding: 40rpx;
  position: relative;
  z-index: 1;
}

.footer-text {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 12rpx;
}

.footer-link {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  text-decoration: underline;
}